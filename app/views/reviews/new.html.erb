<div class="container">
  <h1 class="mt-3">New review for: <%= @restaurant.name %></h1>
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, :input_html => { type: "number", min: 0, max: 5 } %>
      <%= f.submit "Add", class: "btn btn-primary" %>
    <% end %>
<button class="btn btn-light"><%= link_to "home", restaurants_path %></button>
</div>
