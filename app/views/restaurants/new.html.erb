<div class="container pt-3">
  <h1>New Restaurant</h1>

  <%= simple_form_for(@restaurant) do |f| %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :category %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>

  <%= link_to 'Back', restaurants_path %>
</div>
